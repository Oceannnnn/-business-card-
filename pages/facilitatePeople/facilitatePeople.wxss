}

.menu-box {
  padding: 24rpx 12rpx 0;
}

.menu-box .item {
  width: 20%;
  overflow: hidden;
  margin-bottom: 20rpx;
}

.menu-box .item image {
  display: block;
  width: 80rpx;
  height: 80rpx;
  max-width: 100%;
